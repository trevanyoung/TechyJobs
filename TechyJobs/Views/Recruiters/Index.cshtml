@model IEnumerable<TechyJobs.Models.Recruiter>

@{
    ViewData["Title"] = "Index";
}

<h1>Recruiters</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecruiterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecruiterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecruiterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
